% This command does the basic computation of the prices
\newcommand*\@ArtikelX[6][X]{
  \initRechnung
  \advance\@RCHcnt1%
  \@readNum{#5}
  \@RCHtmptmp=\@RCHtmp%
  \@readNum{#2}\multiply\@RCHtmp\@RCHtmptmp
